<!DOCTYPE html>
<html>
  <head>
    <title>Add Project</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              primary: '#f14201',
              dark: '#111111'
            }
          }
        }
      }
    </script>
  </head>

  <body class="bg-gray-100 p-8">
    <h1 class="text-xl font-bold mb-6">Add Project</h1>

    <form
      method="POST"
      action="/admin/add-project"
      class="bg-white p-6 rounded shadow space-y-4"
    >
      <!-- BASIC INFO -->
      <input
        name="name"
        placeholder="Project Name"
        class="w-full border p-2"
        required
      />

      <input name="location" placeholder="Location" class="w-full border p-2" />

      <input name="price" placeholder="Price" class="w-full border p-2" />

      <input name="landSize" placeholder="Land Size (e.g., 5 acres, 2000 sq ft)" class="w-full border p-2" />

      <!-- HERO -->
      <h3 class="font-semibold mt-4">Hero Section</h3>
      <input
        name="hero[heading]"
        placeholder="Hero Heading"
        class="w-full border p-2"
      />
      <input
        name="hero[subText]"
        placeholder="Hero Sub Text"
        class="w-full border p-2"
      />
      <input
        name="hero[image]"
        placeholder="Hero Image URL (https://...)"
        class="w-full border p-2"
      />
      <input
        name="hero[rera]"
        placeholder="RERA Registration Number (e.g., PB/DLI/2023/12345)"
        class="w-full border p-2"
      />
      <input
        name="hero[possession]"
        placeholder="Possession Date/Status (e.g., Q2 2025 or 01-06-2025)"
        class="w-full border p-2"
      />

      <!-- ABOUT -->
      <h3 class="font-semibold mt-4">About Section</h3>
      <input
        name="about[title]"
        placeholder="About Title"
        class="w-full border p-2"
      />
      <textarea
        name="about[content]"
        placeholder="About Content"
        class="w-full border p-2"
      ></textarea>
      <input
        name="about[image]"
        placeholder="About Image URL (https://...)"
        class="w-full border p-2"
      />

      <input name="amenities" placeholder="Clubhouse, Pool, Gym" />

      <!-- GALLERY SECTION -->
      <h3 class="font-semibold mt-4">Image Gallery</h3>
      <div id="galleryContainer" class="space-y-2">
        <div class="galleryItem flex gap-2">
          <input name="gallery[]" placeholder="Image URL (https://...)" class="flex-1 border p-2" />
          <button type="button" onclick="removeGallery(this)" class="bg-red-500 text-white px-2 py-1 rounded">Remove</button>
        </div>
      </div>
      <button type="button" onclick="addGallery()" class="bg-green-600 text-white px-3 py-1 rounded mt-2">+ Add Image</button>

      <script>
        function addGallery() {
          const container = document.getElementById('galleryContainer');
          const newItem = document.createElement('div');
          newItem.className = 'galleryItem flex gap-2';
          newItem.innerHTML = `
            <input name="gallery[]" placeholder="Image URL (https://...)" class="flex-1 border p-2" />
            <button type="button" onclick="removeGallery(this)" class="bg-red-500 text-white px-2 py-1 rounded">Remove</button>
          `;
          container.appendChild(newItem);
        }
        
        function removeGallery(btn) {
          btn.parentElement.remove();
        }
      </script>

      <!-- FAQ SECTION -->
      <h3 class="font-semibold mt-4">FAQs</h3>
      <div id="faqContainer" class="space-y-3">
        <div class="faqItem flex gap-2">
          <input name="faqQuestion[]" placeholder="FAQ Question" class="flex-1 border p-2" />
          <input name="faqAnswer[]" placeholder="FAQ Answer" class="flex-1 border p-2" />
          <button type="button" onclick="removeFaq(this)" class="bg-red-500 text-white px-2 py-1 rounded">Remove</button>
        </div>
      </div>
      <button type="button" onclick="addFaq()" class="bg-green-600 text-white px-3 py-1 rounded mt-2">+ Add FAQ</button>

      <script>
        function addFaq() {
          const container = document.getElementById('faqContainer');
          const newItem = document.createElement('div');
          newItem.className = 'faqItem flex gap-2';
          newItem.innerHTML = `
            <input name="faqQuestion[]" placeholder="FAQ Question" class="flex-1 border p-2" />
            <input name="faqAnswer[]" placeholder="FAQ Answer" class="flex-1 border p-2" />
            <button type="button" onclick="removeFaq(this)" class="bg-red-500 text-white px-2 py-1 rounded">Remove</button>
          `;
          container.appendChild(newItem);
        }
        
        function removeFaq(btn) {
          btn.parentElement.remove();
        }
      </script>

      <!-- ================= SEO SECTION ================= -->
      <h3 class="font-semibold mt-6 text-lg">SEO Settings</h3>

      <input
        name="metaTitle"
        placeholder="Meta Title (SEO)"
        class="w-full border p-2 rounded"
      />

      <textarea
        name="metaDescription"
        placeholder="Meta Description (SEO)"
        class="w-full border p-2 rounded"
      ></textarea>

      <input
        name="ogImage"
        placeholder="OG Image URL (https://...)"
        class="w-full border p-2 rounded"
      />

      <textarea
        name="schema"
        placeholder="Custom JSON-LD Schema (optional)"
        class="w-full border p-2 rounded"
      ></textarea>

      <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded">
        Add Project
      </button>
    </form>
  </body>
</html>
